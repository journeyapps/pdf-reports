{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"],
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": false,
    "allowJs": false,
    "composite": true,
    "types": [
      "node",
      "node-fetch"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
